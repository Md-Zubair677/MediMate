# MediMate Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=MediMate API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=ap-south-1
AWS_PROFILE=
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_KEY

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_MAX_TOKENS=1000

# DynamoDB Configuration
DYNAMODB_APPOINTMENTS_TABLE=medimate-appointments
DYNAMODB_USERS_TABLE=medimate-users
DYNAMODB_REPORTS_TABLE=medimate-reports

# Cognito Configuration
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=

# SES Configuration
SES_FROM_EMAIL=noreply@medimate.com
SES_REGION=ap-south-1
SES_CONFIGURATION_SET=
SES_APPOINTMENT_TEMPLATE=medimate-appointment-confirmation
SES_REMINDER_TEMPLATE=medimate-appointment-reminder

# SNS Configuration
SNS_REGION=ap-south-1
SNS_APPOINTMENT_TOPIC_ARN=
SNS_SYSTEM_ALERTS_TOPIC_ARN=
SNS_SENDER_ID=MediMate

# SageMaker Configuration
SAGEMAKER_ENDPOINT_NAME=
SAGEMAKER_MODEL_NAME=medimate-health-risk-predictor

# KMS Configuration
KMS_KEY_ID=
KMS_KEY_ALIAS=alias/medimate-encryption-key

# Security Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# CORS Configuration
CORS_ORIGINS=*

# Demo Mode Configuration
DEMO_MODE=true
MOCK_AWS_SERVICES=true