# AWS Cognito Configuration
# Copy this file to .env.local and update with your actual AWS Cognito values

# AWS Region where your Cognito User Pool is hosted
NEXT_PUBLIC_AWS_REGION=us-east-1

# Cognito User Pool ID (found in AWS Console > Cognito > User Pools)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX

# Cognito User Pool Client ID (found in User Pool > App Integration > App clients)
NEXT_PUBLIC_COGNITO_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Cognito Identity Pool ID for federated identities
NEXT_PUBLIC_COGNITO_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Development Mode (set to 'true' to enable demo mode when AWS is not configured)
NEXT_PUBLIC_DEMO_MODE=false